<VirtualHost *:443>
        ServerAdmin webmaster@localhost
        ServerName flw-dev.carrefour.com

	<Location / >
               AuthType shibboleth
                ShibRequestSetting requireSession 1
                require valid-user
        </Location>

	ProxyPass / ajp://127.0.0.1:8082/
        ProxyPassReverse / https://flw-dev.reporting-dechets.com:8082
        ProxyPreserveHost On

	SSLEngine on

	SSLCertificateFile /etc/apache2/ssl/flw-dev.carrefour.com.pem
	SSLCertificateKeyFile /etc/apache2/ssl/flw-dev.carrefour.com.key
	SSLCertificateChainFile /etc/apache2/ssl/organization.crt
	SSLVerifyClient none
</VirtualHost>